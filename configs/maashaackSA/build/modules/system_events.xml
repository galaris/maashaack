<project>
    
    <target name="compile-system_events">
        
        <propertycopy name="path" from="project.fullpath" override="true"/>
        
        <!-- build -->
        <ant antfile="${path}/meta.xml" target="main" inheritAll="false">
            <property name="FLEX_HOME" value="${FLEX_HOME}" />
            <property name="TODAY" value="${TODAY}" />
            <property name="local.flashplayerversion" value="${local.flashplayerversion}" />
            <property file="${path}/build/build.properties"/>
        </ant>
        
        <!-- deploy to libs -->
        <copy file="${path}/bin-release/system.events.swc" todir="libs/swc" overwrite="true" />
        <!--<copy file="${path}/bin-release/system.events.abc" todir="libs/abc" overwrite="true" />-->
        
        <!-- sync with other projects--> 
        <copy file="${path}/bin-release/system.events.swc" todir="packages/system_broadcasters/lib-swc" overwrite="true" />
        <!--<copy file="${path}/bin-release/system.events.abc" todir="packages/system_broadcasters/lib-abc" overwrite="true" />-->
        
    </target>
    
</project>
